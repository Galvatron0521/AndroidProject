<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@android:color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <EditText
                android:id="@+id/login_username"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:background="@android:color/white"
                android:hint="请输入账号"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/login_username"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#eeeeee" />

            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/line1"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toLeftOf="@+id/login_forget"
                android:background="@color/white"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/login_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/login_password"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/login_password"
                android:gravity="center"
                android:text="忘记密码"
                android:textColor="#999999"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/login_password"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#eeeeee" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_keep"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="记住密码"
                android:textColor="#999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/login_auto"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:text="自动登录"
                android:textColor="#999999"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_auto"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="66dp"
                android:background="@mipmap/btn_login"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="神康云旗下品牌"
            android:textColor="#999999"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Copyright  © 2016 北京神康云科技有限公司"
            android:textColor="#999999"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>